{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Coop Negotiation",
    "description": "Coop negotiation between SR and customer",
    "type": "object",
    "properties": {
        "approver": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "language": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 2
                },
                "salutation": {
                    "enum": [
                        "MS",
                        "MR"
                    ]
                },
                "first_name": {
                    "type": "string",
                    "minLength": 1
                },
                "last_name": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [
                "email",
                "salutation",
                "first_name",
                "last_name",
                "language"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "approver"
    ],
    "additionalProperties": false
}